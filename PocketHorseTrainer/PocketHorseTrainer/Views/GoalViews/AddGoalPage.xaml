<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PocketHorseTrainer.Views.AddGoalPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PocketHorseTrainer.Models"
    xmlns:enums="clr-namespace:PocketHorseTrainer.Models.Enums"
    xmlns:viewModels="clr-namespace:PocketHorseTrainer.ViewModels"
    x:DataType="viewModels:AddGoalViewModel">

    <ContentPage.Content>

        <StackLayout>

            <Label Text="Goal Name" />
            <Entry Text="{Binding Name}" />

            <Label Text="Goal Interval" />
            <controls:EnumBindablePicker x:TypeArguments="enums:Interval" SelectedItem="{Binding SelectedInterval}" />

            <Label Text="Start Date" />
            <DatePicker Date="{Binding StartDate}" />
            <Label Text="End Date" />
            <DatePicker Date="{Binding EndDate}" />

            <Label Text="Target Area" />
            <Picker
                ItemDisplayBinding="{Binding Name}"
                ItemsSource="{Binding Areas}"
                SelectedItem="{Binding SelectedArea}" />

            <Button Command="{Binding AddCommand}" Text="Add Goal" />

        </StackLayout>

    </ContentPage.Content>

</ContentPage>